<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:id="@+id/give_page"
        android:background="@android:color/transparent"
        android:src="@drawable/give_page"
        android:visibility="visible"/>




    <ImageView
    android:layout_width="260dp"
        android:id="@+id/current_sleep"
    android:src="@drawable/current"
    android:background="#00000000"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="30dp"
    android:layout_marginBottom="30dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Sleep Time"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/current_sleep"
        android:id="@+id/current_sleep_time"
        android:layout_marginBottom="30dp"/>



    <ImageView
        android:layout_width="380dp"
        android:layout_height="5dp"
        android:id="@+id/line_1"
        android:src="@drawable/line"
        android:layout_below="@+id/current_sleep_time"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>



    <ImageView
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:id="@+id/total_sleep"
        android:src="@drawable/total_sleep"
        android:background="#00000000"
        android:layout_below="@+id/line_1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Earned Time"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/total_sleep"
        android:id="@+id/total_earned_time"
        android:layout_marginBottom="30dp"
        />

    <ImageView
        android:layout_width="380dp"
        android:layout_height="5dp"
        android:id="@+id/line_2"
        android:src="@drawable/line"
        android:layout_below="@+id/total_earned_time"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="258dp"
        android:layout_height="40dp"
        android:id="@+id/total_earned"
        android:src="@drawable/total_earned"
        android:background="#00000000"
        android:layout_below="@+id/line_2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Earned Money"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/total_earned"
        android:id="@+id/total_earned_money"
        android:layout_marginBottom="30dp"
        />




    <Button
        android:id="@+id/startCharity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finish"
        android:background="#00DD00"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFFFF"
        />
</RelativeLayout>